<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.janegoodlandmaths.www.mathszoo.animal_view"
    tools:showIn="@layout/activity_animal_view">

    <TextView
        android:id="@+id/text_parent_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="ERROR"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Submit"
        app:layout_constraintRight_toRightOf="@+id/btn_submit"
        app:layout_constraintLeft_toRightOf="@+id/txt_answer"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toBottomOf="@+id/label_correct" />

    <Button
        android:id="@+id/btn_back_to_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Zone"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btn_back_to_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Back to Zoo Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_back_to_zone"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        android:layout_marginEnd="8dp" />

    <ProgressBar
        android:id="@+id/bar_hunger"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="107dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-7dp"
        android:max="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_animal_name"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/text_animal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="17dp"
        android:text="@string/current_animal"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_parent_zone"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/label_correct"
        android:layout_width="372dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance.Holo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_question" />

    <TextView
        android:id="@+id/label_question"
        android:layout_width="337dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:text="@string/current_question"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar_hunger" />

    <EditText
        android:id="@+id/txt_answer"
        android:layout_width="218dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textIsSelectable="true"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_correct"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/ans_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="1"
        app:layout_constraintLeft_toRightOf="@+id/ans_0"
        app:layout_constraintTop_toBottomOf="@+id/txt_answer" />

    <Button
        android:id="@+id/ans_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/ans_2"
        app:layout_constraintTop_toBottomOf="@+id/txt_answer" />

    <Button
        android:id="@+id/ans_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/ans_1"
        app:layout_constraintTop_toBottomOf="@+id/txt_answer" />

    <Button
        android:id="@+id/ans_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="4"
        app:layout_constraintLeft_toRightOf="@+id/ans_3"
        app:layout_constraintTop_toBottomOf="@+id/txt_answer" />

    <Button
        android:id="@+id/ans_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:text="5"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_submit"
        app:layout_constraintLeft_toRightOf="@+id/ans_4"
        android:layout_marginLeft="-5dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="32dp"
        android:layout_height="51dp"
        android:layout_marginStart="5dp"
        android:text="-"
        tools:layout_editor_absoluteY="297dp"
        app:layout_constraintLeft_toRightOf="@+id/ans_5"
        android:layout_marginLeft="-5dp" />

    <Button
        android:id="@+id/ans_6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="6"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/ans_0"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/ans_7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="7"
        app:layout_constraintLeft_toRightOf="@+id/ans_6"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/ans_1" />

    <Button
        android:id="@+id/ans_9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/ans_8"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/ans_3" />

    <Button
        android:id="@+id/ans_8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@+id/ans_7"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/ans_2" />

    <Button
        android:id="@+id/ans_y"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:text="y"
        app:layout_constraintLeft_toRightOf="@+id/ans_x"
        app:layout_constraintTop_toBottomOf="@+id/ans_7" />

    <Button
        android:id="@+id/ans_x"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:text="x"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_6" />

    <Button
        android:id="@+id/ans_0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_answer" />

    <Button
        android:id="@+id/ans_x2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="x^2"
        app:layout_constraintLeft_toRightOf="@+id/ans_y"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/ans_8" />

    <Button
        android:id="@+id/ans_bl"
        android:layout_width="32dp"
        android:layout_height="49dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="("
        app:layout_constraintLeft_toRightOf="@+id/ans_x2"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/ans_9" />

    <Button
        android:id="@+id/ans_bksp"
        android:layout_width="69dp"
        android:layout_height="48dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-1dp"
        android:text="BKSP"
        app:layout_constraintLeft_toRightOf="@+id/ans_9"
        app:layout_constraintTop_toBottomOf="@+id/ans_5" />

    <Button
        android:id="@+id/ans_dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:text="."
        app:layout_constraintTop_toBottomOf="@+id/ans_bksp"
        app:layout_constraintLeft_toRightOf="@+id/ans_br"
        android:layout_marginLeft="-5dp" />

    <Button
        android:id="@+id/ans_t"
        android:layout_width="66dp"
        android:layout_height="47dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:text="True"
        app:layout_constraintLeft_toRightOf="@+id/ans_bksp"
        app:layout_constraintTop_toBottomOf="@+id/ans_5" />

    <Button
        android:id="@+id/ans_f"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:text="False"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/ans_t"
        app:layout_constraintLeft_toRightOf="@+id/ans_dp"
        android:layout_marginLeft="-5dp" />

    <Button
        android:id="@+id/ans_br"
        android:layout_width="28dp"
        android:layout_height="52dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginStart="5dp"
        android:text=")"
        app:layout_constraintLeft_toRightOf="@+id/ans_bl"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/ans_bksp" />

    <TextView
        android:id="@+id/text_user_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ERROR"
        app:layout_constraintRight_toLeftOf="@+id/text_parent_zone"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/text_animal_name"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintVertical_bias="0.47" />

</android.support.constraint.ConstraintLayout>
